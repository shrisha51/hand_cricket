<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.HandCricket.MainPlayActivity"
    android:background="#000"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/u"
        android:src="@drawable/u"
        android:layout_alignTop="@+id/c"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/c"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/c"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uone"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/uone"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/utwo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/utwo"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uthree"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/u"
        android:layout_alignEnd="@+id/u"
        android:src="@drawable/uthree"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ufour"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/u"
        android:layout_alignEnd="@+id/u"
        android:src="@drawable/ufour"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ufive"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/u"
        android:layout_alignEnd="@+id/u"
        android:src="@drawable/ufive"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usix"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/u"
        android:layout_alignEnd="@+id/u"
        android:src="@drawable/usix"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cone"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/cone"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ctwo"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ctwo"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cthree"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/cthree"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cfour"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/c"
        android:layout_alignStart="@+id/c"
        android:src="@drawable/cfour"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cfive"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/c"
        android:layout_alignStart="@+id/c"
        android:src="@drawable/cfive"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/csix"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/csix"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="  YOU"
        android:id="@+id/textView"

        android:textColor="#fff"
        android:visibility="visible"
        android:layout_below="@+id/yabl"
        android:layout_toLeftOf="@+id/but2"
        android:layout_toStartOf="@+id/but2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="MOBILE       "
        android:id="@+id/textView2"
        android:layout_alignBottom="@+id/textView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yabl"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/yabl"
        android:visibility="visible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/yabt"
        android:layout_alignTop="@+id/yabl"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:src="@drawable/yabt"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="6"
        android:id="@+id/but6"
        android:layout_below="@+id/c"
        android:layout_alignRight="@+id/c"
        android:layout_alignEnd="@+id/c"
        android:onClick="dispu6"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/but5"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but6"
        android:layout_toStartOf="@+id/but6"
        android:onClick="dispu5"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4"
        android:id="@+id/but4"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but5"
        android:layout_toStartOf="@+id/but5"
        android:onClick="dispu4"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3"
        android:id="@+id/but3"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but4"
        android:layout_toStartOf="@+id/but4"
        android:onClick="dispu3"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2"
        android:id="@+id/but2"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but3"
        android:layout_toStartOf="@+id/but3"
        android:onClick="dispu2"
        />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:id="@+id/but1"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but2"
        android:layout_toStartOf="@+id/but2"
        android:onClick="dispu1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="  choose"
        android:id="@+id/textView3"
        android:layout_below="@+id/u"
        android:layout_toLeftOf="@+id/but1"
        android:textColor="#fff"
        android:layout_alignBottom="@+id/but1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="You :  "
        android:textColor="#fff"
        android:id="@+id/textView4"
        android:layout_below="@+id/but2"
        android:layout_toLeftOf="@+id/but2"
        android:layout_toStartOf="@+id/but2"
        android:layout_marginTop="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:textColor="#fff"
        android:id="@+id/yscore"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile :  "
        android:textColor="#fff"
        android:id="@+id/textView5"
        android:layout_alignBottom="@+id/yscore"
        android:layout_alignLeft="@+id/c"
        android:layout_alignStart="@+id/c" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text=" "
        android:id="@+id/cscore"
        android:textColor="#fff"
        android:layout_alignTop="@+id/textView5"
        android:layout_toRightOf="@+id/textView5"
        android:layout_toEndOf="@+id/textView5" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/out"
        android:src="@drawable/out"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttbat"
        android:src="@drawable/ttbat"
        android:visibility="invisible"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ttbowl"
        android:src="@drawable/ttbowl"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"/>

</RelativeLayout>
